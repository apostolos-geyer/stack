{
  "name": "template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "check": "biome check ./packages",
    "check:fix": "biome check ./packages --write",
    "format": "biome format ./packages",
    "format:fix": "biome format ./packages --write",
    "db:generate": "turbo db:generate",
    "db:migrate:dev": "pnpm --filter @_/infra.db db:migrate:dev",
    "db:migrate:deploy": "pnpm --filter @_/infra.db db:migrate:deploy",
    "db:push": "pnpm --filter @_/infra.db db:push",
    "db:studio": "pnpm --filter @_/infra.db db:studio",
    "seed-user": "dotenv -e .env tsx ./scripts/seed-user.ts",
    "settings": "settings",
    "gen": "turbo gen",
    "init": "turbo gen init"
  },
  "devDependencies": {
    "@_/cfg.ts": "workspace:",
    "@_/tools.settings": "workspace:",
    "@_/infra.auth": "workspace:",
    "@biomejs/biome": "^2.3.7",
    "@trpc/server": "catalog:",
    "@turbo/gen": "^2.5.0",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "overrides": {
      "lightningcss": "1.30.1",
      "@types/react": "catalog:native",
      "@types/react-dom": "catalog:native"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "better-sqlite3",
      "core-js-pure",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
